{
  "compilerOptions": {
    "outDir": "./lib",
    "baseUrl": "./src",
    "target": "es6",
    "lib": [
      "esnext"
    ],
    "composite": true,
    "declaration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  
  "include": [
    "src"
  ],
  "exclude": [
    "__tests__",
    "./lib"
  ]
}